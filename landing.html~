<script>
	vid = document.getElementById("video");
	vid.pause();
	document.getElementById('main-button').addEventListener('click', show_vid, false);
	function show_vid(){
		//vid.play();
		document.getElementById('butt-note').style.left = '0px';
		document.getElementById('butt-note').style.opacity = '0';
		setTimeout( function(){
		document.getElementById('main-button').style.left = '0px';
		document.getElementById('main-button').style.opacity = '0';
		document.getElementById('vido').style.display = 'block';
		document.getElementById('type-container').style.display = 'block';
		setTimeout( function(){
			document.getElementById('vido').style.opacity = '1';
			document.getElementById('vido').style.left = '0';
			setTimeout( function(){
				document.getElementById('type-container').style.opacity = '1';
				document.getElementById('type-container').style.left = '0';
			}, 100);

		}, 100);
	}, 100);
}

	function show_dis(){
		this.getElementsByTagName('p')[0].opacity = 1;
	}






</script>

